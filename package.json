{
  "publisher": "mugraph",
  "name": "toggle-gitignore-files",
  "displayName": "Toggle Git Ignore Files",
  "description": "Toggle Git Ignore Files in Explorer",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.98.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mugraph/toggle-gitignore-files.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "toggle-gitignore-files.toggleGitIgnore",
        "title": "Toggle Git Ignore Files"
      }
    ],
    "keybindings": [
      {
        "command": "toggle-gitignore-files.toggleGitIgnore",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g",
        "when": "explorerViewletVisible"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "toggle-gitignore-files.toggleGitIgnore",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}